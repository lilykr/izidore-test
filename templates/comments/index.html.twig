{% extends 'base.html.twig' %}

{% block title %}
  Clients comments
{% endblock %}

{% block body %}
  <div style="display: flex; justify-content: space-between;">
    <h1 style="text-align: center; padding: 1rem;">
      Tous les avis de nos clients âœ¨
    </h1>
    <button type="button"
      class="btn btn-secondary btn-lg"
      onClick="document.location.href='comment/new'"
      style="text-align: center; margin: 1rem;">
      Donner son avis
    </button>
  </div>
  {% if comments %}
    <div style="display: flex; flex-wrap: wrap;">
      {% for comment in comments %}
        <div class="card border-secondary mb-3"
          style="max-width: 20rem; margin-top: 1.4rem; margin-right: 2rem;">
          <div class="card-header">
            Avis de {{ comment.name }}
          </div>
          <div class="card-body">
            <h4 class="card-title">
              {{ comment.title }}
            </h4>
            <p class="card-text">
              {{ comment.content }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <h2>
      Pas d'avis client pour le moment
    </h2>
  {% endif %}
{% endblock %}
