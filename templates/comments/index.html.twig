{% extends 'base.html.twig' %}

{% block title %}
  Clients comments
{% endblock %}

{% block body %}
  {% if comments %}
    <div style="display: flex;">
      {% for comment in comments %}
        <div class="card border-secondary mb-3"
          style="max-width: 20rem; margin-top: 1.4rem; margin-right: 2rem;">
          <div class="card-header">
            Avis de {{ comment.name }}
          </div>
          <div class="card-body">
            <h4 class="card-title">
              {{ comment.title }}
            </h4>
            <p class="card-text">
              {{ comment.content }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>
      Pas d'avis client pour le moment
    </p>
  {% endif %}
{% endblock %}
